{
    "$schema": "http://json-schema.org/schema#",
    "id": "https://schema.example.com/helm/service-account.json",
    "type": "object",
    "properties": {
        "serviceaccount": {
            "allOf": [
                {
                    "$ref": "#/definitions/ServiceAccount"
                }
            ]
        }
    },
    "definitions": {
        "ServiceAccount": {
            "type": "object",
            "description": "Service Account config",
            "properties": {
                "create": {
                    "type": "boolean",
                    "description": "Create or not create the service account"
                },
                "annotations": {
                    "type": "object",
                    "descriptions": "Annotations for this service account"
                },
                "name": {
                    "type": "string",
                    "descriptions": "Name for the service account"
                }
            }
        }
    }
}