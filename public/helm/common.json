{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": [
      "image"
  ],
  "properties": {
      "image": {
          "type": "object",
          "required": [
              "repository",
              "pullPolicy"
          ],
          "properties": {
              "repository": {
                  "type": "string",
                  "pattern": "^[a-z0-9-_]+$"
              },
              "pullPolicy": {
                  "type": "string",
                  "pattern": "^(Always|Never|IfNotPresent)$"
              }
          }
      }
  }
}