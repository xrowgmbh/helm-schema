{
    "$schema": "http://json-schema.org/schema#",
    "id": "https://schema.example.com/helm/container.json",
    "type": "object",
    "properties": {
        "securityContext": {
            "type": "object",
            "description": "Settings for privilege and access control for the container"
        },
        "resources": {
            "type": "object",
            "description": "The hardware resources Kubernetes shall use for every pod",
            "properties": {
                "limits": {
                    "description": "The limit of hardware usage for each pod",
                    "properties": {
                        "cpu": {
                            "description": "Limit of CPU usage per pod",
                            "type": "string",
                            "pattern": "^[1-9][0-9]*m$"
                        },
                        "memory": {
                            "description": "Limit of memory usage per pod",
                            "type": "string",
                            "pattern": "^[1-9][0-9]*(Gi|Mi)$"
                        }
                    }
                },
                "requests": {
                    "description": "The minimum requested hardware for each pod",
                    "properties": {
                        "cpu": {
                            "description": "The minimum of requested CPU capacity for each pod",
                            "type": "string",
                            "pattern": "^[1-9][0-9]*m$"
                        },
                        "memory": {
                            "description": "The minimum of requested memory capacity for each pod",
                            "type": "string",
                            "pattern": "^[1-9][0-9]*(Gi|Mi)$"
                        }
                    }
                }
            }
        },
        "command": {
            "type": "array",
            "description": "Command"
        },
        "args": {
            "type": "array",
            "description": "Command Arguments"
        },
        "image": {
            "allOf": [
                {
                    "$ref": "#/definitions/Image"
                }
            ]
        },
        "livenessProbe": {
            "$ref": "#/definitions/Probe"
        },
        "readinessProbe": {
            "$ref": "#/definitions/Probe"
        },
        "startupProbe": {
            "$ref": "#/definitions/Probe"
        }
    },
    "definitions": {
        "Probe": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "path": {
                    "type": "string"
                },
                "exec": {
                    "type": "object"
                },
                "initialDelaySeconds": {
                    "type": "integer"
                },
                "periodSeconds": {
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "type": "integer"
                },
                "failureThreshold": {
                    "type": "integer"
                },
                "successThreshold": {
                    "type": "integer"
                }
            },
            "required": [
                "enabled",
                "failureThreshold",
                "initialDelaySeconds",
                "periodSeconds",
                "successThreshold",
                "timeoutSeconds"
            ],
            "title": "Probe"
        },
        "Image": {
            "type": "object",
            "required": [
                "registry",
                "repository",
                "tag",
                "pullPolicy"
            ],
            "additionalProperties": false,
            "properties": {
                "registry": {
                    "description": "Docker registry where the image is located",
                    "type": "string",
                    "pattern": "^[a-z0-9-.]+$"
                },
                "repository": {
                    "description": "Repository and image name",
                    "type": "string",
                    "pattern": "^[a-z0-9-_]+$"
                },
                "tag": {
                    "description": "image tag",
                    "type": "string",
                    "pattern": "^[a-z0-9-.]+$"
                },
                "pullPolicy": {
                    "description": "Specify a imagePullPolicy. Defaults to 'Always' if image tag is 'latest', else set to 'IfNotPresent'",
                    "type": "string",
                    "pattern": "^(Always|Never|IfNotPresent)$"
                },
                "pullSecrets": {
                    "description": "Optionally specify an array of imagePullSecrets (evaluated as templates).",
                    "type": "array"
                }
            }
        }
    }
}